{
    "files": {
        "ignoreUnknown": true,
        "ignore": [
            "katex/*.js"
        ]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "ignore": [],
        "attributePosition": "auto",
        "indentStyle": "tab",
        "indentWidth": 2,
        "lineWidth": 80,
        "lineEnding": "lf"
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "bracketSameLine": false,
            "bracketSpacing": true,
            "jsxQuoteStyle": "double",
            "quoteProperties": "asNeeded",
            "semicolons": "always",
            "trailingCommas": "all"
        }
    },
    "json": {
        "formatter": {
            "trailingCommas": "none"
        }
    },
    "linter": {
        "rules": {
            "correctness": {
                "noUnusedVariables": {
                    "level": "error",
                    "fix": "none"
                }
            },
            "style": {
                "useConst": {
                    "level": "warn",
                    "fix": "unsafe"
                },
                "useTemplate": {
                    "level": "warn",
                    "fix": "safe"
                }
            }
        }
    },
    "organizeImports": {
        "enabled": true
    }
}
